graph TD
    subgraph Label["Major Label"]
        LO[Label Key<br/>owner of catalog]
        AR[A&R Key<br/>admin]
        DP[Distribution Partner Key<br/>distributor â€” NA territory]
        AK[Artist Key<br/>owner of individual tracks]
        C1[Consumer 1]
        C2[Consumer 2]

        LO -->|DelegateRole: admin| AR
        LO -->|DelegateRole: distributor<br/>scope: North America| DP
        LO -.->|Artist retains ownership<br/>of individual tracks| AK
        AR -->|can upload on<br/>behalf of artists| LO
        DP -->|GrantAccess: consumer| C1
        DP -->|GrantAccess: consumer| C2
    end

    subgraph Indie["Independent Artist"]
        IO[Artist Key<br/>owner]
        IC[Consumer]
        PUB[Public policy]

        IO -->|SetAccessPolicy: public| PUB
        IO -->|or GrantAccess: consumer| IC
    end

    subgraph Roles["Role Hierarchy"]
        R_OWN[owner<br/>full control, transfer, delegate]
        R_ADM[admin<br/>manage policies, upload on behalf]
        R_DIS[distributor<br/>grant consumer access within scope]
        R_CON[consumer<br/>decrypt and play]

        R_OWN -->|delegates| R_ADM
        R_OWN -->|delegates| R_DIS
        R_ADM -->|delegates| R_DIS
        R_DIS -->|grants| R_CON
        R_OWN -->|grants directly| R_CON
    end

    style R_OWN fill:#1a5276,color:#fff
    style R_ADM fill:#2d6a4f,color:#fff
    style R_DIS fill:#7d6608,color:#fff
    style R_CON fill:#533483,color:#fff
